<div class="container">
	<div class="col-xs-3">
		<h1>マイページ</h1>
		<table>
			<tr><%= attachment_image_tag @user, :profile_image, :fill, 175, 175,  fallback: "no_image.jpg" %></tr>
			<tr>
				<td>名前:</td>
				<td><%= @user.name %></td>
			</tr>
		</table>
		<p><%= link_to "", edit_user_path(@user), class:"glyphicon glyphicon-cog" %></p>
	</div>

	<div class="col-xs-5">
		<h2>Bikers</h2>
		<% @bikes.each do |bike| %>
		<div class="box">
	   		<%= attachment_image_tag bike.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
		    <%= bike.user.name %><br>
			<%= link_to bike.text,bike_path(bike.id) %><br>
			<%= attachment_image_tag bike, :image, :fill, 250, 250, format: 'jpeg' %><br>
			<%= bike.created_at.strftime('%Y/%m/%d/%H:%M') %><br>
			<div class="row">
				<div class="col-xs-3">
					<%= link_to "#{bike.comments.count} コメント", bike_path(bike.id) %>
				</div>
				<div class="col-xs-3">
					<%= render  'bikes/bikes', bike: bike %>
				</div>
			</div>
		<% end %>
    	</div>
	</div>
</div>


